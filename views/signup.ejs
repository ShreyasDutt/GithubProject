<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pinterest Sign Up</title>
    <script src="https://unpkg.com/@tailwindcss/browser@4"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
</head>
<body class="flex min-h-screen items-center justify-center bg-gray-50 p-4">
<div class="flex w-full max-w-md flex-col items-center justify-center px-4 sm:px-6 md:max-w-lg lg:max-w-xl">
    <!-- Logo -->
    <div class="mb-6 flex justify-center sm:mb-8">
        <svg class="h-10 w-10 text-red-600 sm:h-12 sm:w-12" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 0C5.373 0 0 5.373 0 12c0 5.084 3.163 9.426 7.627 11.174-.105-.949-.2-2.405.042-3.441.218-.937 1.407-5.965 1.407-5.965s-.359-.719-.359-1.782c0-1.668.967-2.914 2.171-2.914 1.023 0 1.518.769 1.518 1.69 0 1.029-.655 2.568-.994 3.995-.283 1.194.599 2.169 1.777 2.169 2.133 0 3.772-2.249 3.772-5.495 0-2.873-2.064-4.882-5.012-4.882-3.414 0-5.418 2.561-5.418 5.207 0 1.031.397 2.138.893 2.738.098.119.112.224.083.345l-.333 1.36c-.053.22-.174.267-.402.161-1.499-.698-2.436-2.889-2.436-4.649 0-3.785 2.75-7.262 7.929-7.262 4.163 0 7.398 2.967 7.398 6.931 0 4.136-2.607 7.464-6.227 7.464-1.216 0-2.359-.631-2.75-1.378l-.748 2.853c-.271 1.043-1.002 2.35-1.492 3.146C9.57 23.812 10.763 24 12 24c6.627 0 12-5.373 12-12 0-6.628-5.373-12-12-12z" />
        </svg>
    </div>

    <!-- Welcome Text -->
    <div class="mb-6 text-center sm:mb-8">
        <h1 class="text-2xl font-bold text-gray-800 sm:text-3xl">Join Pinterest today</h1>
        <p class="mt-2 text-sm text-gray-600 sm:text-base">Find new ideas to try</p>
    </div>

    <!-- Sign Up Form -->
    <div class="w-full rounded-2xl bg-white p-6 shadow-md sm:p-8">
        <form action="/create" method="POST">
            <!-- Full Name Input -->
            <div class="mb-4">
                <label for="fullname" class="mb-1 block text-sm font-medium text-gray-700">Full Name</label>
                <input type="text" id="fullname" name="fullname" class="w-full rounded-full border border-gray-300 px-3 py-2 text-sm focus:border-transparent focus:ring-2 focus:ring-red-500 focus:outline-none sm:px-4 sm:py-3 sm:text-base" placeholder="Full Name" required />
            </div>

            <!-- Username Input -->
            <div class="mb-4">
                <label for="username" class="mb-1 block text-sm font-medium text-gray-700">Username</label>
                <input type="text" id="username" name="username" class="w-full rounded-full border border-gray-300 px-3 py-2 text-sm focus:border-transparent focus:ring-2 focus:ring-red-500 focus:outline-none sm:px-4 sm:py-3 sm:text-base" placeholder="Username" required />
            </div>

            <!-- Email Input -->
            <div class="mb-4">
                <label for="email" class="mb-1 block text-sm font-medium text-gray-700">Email</label>
                <input type="email" id="email" name="email" class="w-full rounded-full border border-gray-300 px-3 py-2 text-sm focus:border-transparent focus:ring-2 focus:ring-red-500 focus:outline-none sm:px-4 sm:py-3 sm:text-base" placeholder="Email" required />
            </div>

            <!-- Password Input -->
            <div class="mb-5 sm:mb-6">
                <label for="password" class="mb-1 block text-sm font-medium text-gray-700">Password</label>
                <input type="password" id="password" name="password" class="w-full rounded-full border border-gray-300 px-3 py-2 text-sm focus:border-transparent focus:ring-2 focus:ring-red-500 focus:outline-none sm:px-4 sm:py-3 sm:text-base" placeholder="Password" required />
            </div>

            <!-- Sign Up Button -->
            <button type="submit" class="w-full rounded-full bg-red-600 px-4 py-2 text-sm font-medium text-white transition duration-200 hover:bg-red-700 focus:ring-2 focus:ring-red-500 focus:ring-offset-2 focus:outline-none sm:py-3 sm:text-base">Sign up</button>

            <!-- Login Link -->
            <div class="mt-5 text-center sm:mt-6">
                <p class="text-xs text-gray-600 sm:text-sm">Already have an account? <a href="/" class="font-medium
                text-red-600 hover:underline">Log in</a></p>
            </div>
        </form>
    </div>

    <!-- Terms & Conditions -->
    <div class="mt-5 text-center sm:mt-6">
        <p class="px-4 text-xs text-gray-500">By signing up, you agree to Pinterest's <a href="#" class="text-gray-500 hover:underline">Terms of Service</a> and acknowledge you've read our <a href="#" class="text-gray-500 hover:underline">Privacy Policy</a></p>
    </div>
</div>
</body>
</html>
